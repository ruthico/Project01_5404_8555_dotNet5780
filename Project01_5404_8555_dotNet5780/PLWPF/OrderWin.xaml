<Window x:Class="PLWPF.OrderWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        
        Title="Window1" Height="760" Width="1600">

    <Window.Resources>
        <Point x:Key="Point1" >10,10</Point>
        <Style x:Key= "ButtonStyle" TargetType="Button">
            <Setter Property= "FontWeight" Value="Bold"/>
            <Setter Property= "BorderBrush" Value="Transparent"/>
            <Setter Property= "Background" Value="#FFABCCEE"/>
            <Setter Property= "FontSize" Value="22"/>
            <Setter Property= "Foreground" Value="#FF2F17C5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="-3,0,-5,0" Height="729" Width="1600">

        <Grid.Background >
            <ImageBrush ImageSource="Resources\HP-fallback-image-1.jpg" Stretch="UniformToFill" TileMode="Tile"/>
        </Grid.Background >
        <Label Content="Label" HorizontalAlignment="Left" Margin="640,40,0,0" VerticalAlignment="Top" Width="322" Height="52"/>


    </Grid>
</Window>
